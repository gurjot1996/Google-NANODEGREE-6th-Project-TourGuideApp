<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguideapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Hospitals"
            android:label="Hospitals in Chandigarh"/>
        <activity android:name=".Malls"
            android:label="Mall's in Chandigarh"/>
        <activity android:name=".Hotels"
            android:label="Hotel's in Chandigarh"/>
        <activity android:name=".TouristPlace"
            android:label="Places to Visit"></activity>
    </application>

</manifest>